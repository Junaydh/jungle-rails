<tr>
  <td class="name" colspan='2'>
    <%= sale.name %>
  </td>
  <td class="date">
    <%= sale.starts_on %>
  </td>
  <td class="date">
    <%= sale.ends_on %>
  </td>
  <td class="status">
    <% if sale.finished? %>
      <span class="label label-danger">Finished</span>
    <% elsif sale.upcoming? %>
      <span class="label label-warning">Upcoming</span>
    <% else %>
      <span class="label label-success">Active</span>
    <% end %>
  </td>
  <td class="percent_off">
    <%= sale.percent_off %>
  </td>
  <td class="actions">
  </td>
</tr>